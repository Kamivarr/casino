generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // W wersji 5 to jest wymagane i dzia≈Ça idealnie
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  passwordHash String
  balance      Float    @default(1000.0)
  createdAt    DateTime @default(now())
  bets         Bet[]
}

model Game {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  createdAt DateTime @default(now())
  bets      Bet[]
}

model Bet {
  id        Int      @id @default(autoincrement())
  amount    Float
  status    String
  createdAt DateTime @default(now())
  userId    Int
  gameId    Int
  user      User     @relation(fields: [userId], references: [id])
  game      Game     @relation(fields: [gameId], references: [id])
}